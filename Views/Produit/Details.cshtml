@model ProjetDotN.Models.Produit

@{
    ViewData["Title"] = "Details";
}

<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fas fa-info"></i> Details de produit
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.Designation):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.Designation)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.Categorie):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.Categorie.Nom)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.Prix):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.Prix.Price) 
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.Vendeur):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.Vendeur.Nom)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.Vendeur.Ville.Nom):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.Vendeur.Ville.Nom)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.commandes):
                </dt>
                <dd class="col-md-12 col-sm-8" style="margin-top:10px;">
                    <table class="table">
                        <tr>
                            <th>Numéro</th>
                            <th>Client</th>
                            <th>Quantité</th>
                        </tr>
                        @{
                            foreach (var c in ViewBag.commandes)
                            {
                                <tr>
                                    <td>
                                        @c.CommandeID
                                    </td>
                                    <td>
                                        @c.Client.Nom
                                    </td>
                                    <td>
                                        @c.Quantite
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.ProduitID" class="btn btn-warning float-left">Editer</a>
            <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
        </div>
    </div>
</div>

