@model ProjetDotN.Models.Commande


@{
    ViewData["Title"] = "Command";
}

<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un commande
        </div>
        <form asp-action="AddCommand">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-row">
                        <label class="control-label col-md-12 col-xs-12">Produit commandé : <strong>@ViewBag.nom</strong></label>
                        <input type="hidden" name="ProduitID" class="form-control" value="@Model.ProduitID" />
                    </div>
                </div>
                <br />
                <div class="form-row">
                    <label class="control-label col-md-4 col-xs-12">Quantité : </label>
                    <input type="number" name="quantite" class="form-control col-md-8 col-xs-12" value="@Model.Quantite" />
                    <span asp-validation-for="Quantite" class="text-danger errMargin"></span>
                </div>
                <br />
                <div class="form-row">
                    <label class="control-label col-md-4 col-xs-12">Le code client (id) : </label>
                    <input type="text" name="idClient" class="form-control col-md-8 col-xs-12" value="@Model.ClientID" />
                    <span asp-validation-for="Client.ClientID" class="text-danger errMargin"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="footerEdit">
                    <input type="submit" value="Ajouter" class="btn btn-success float-left" />
                    <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
                </div><br />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


