@model ProjetDotN.Models.Produit

@{
    ViewData["Title"] = "Delete";
}

    <div class="container col-md-6 col-md-offset-3 col-xs-12 ">
        <div class="card">
            <div class="card-header title">
                <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Vous voulez vraiment supprimer ce produit?
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-md-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Designation)
                    </dt>
                    <dd class="col-md-8 col-sm-8">
                        @Html.DisplayFor(model => model.Designation)
                    </dd>
                    <dt class="col-md-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Categorie)
                    </dt>
                    <dd class="col-md-8 col-sm-8">
                        @Html.DisplayFor(model => model.Categorie.Nom)
                    </dd>
                    <dt class="col-md-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Prix)
                    </dt>
                    <dd class="col-md-8 col-sm-8">
                        @Html.DisplayFor(model => model.Prix.Price)
                    </dd>
                    <dt class="col-md-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Vendeur)
                    </dt>
                    <dd class="col-md-8 col-sm-8">
                        @Html.DisplayFor(model => model.Vendeur.Nom)
                    </dd>
                    <dt class="col-md-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Vendeur.Ville.Nom)
                    </dt>
                    <dd class="col-md-8 col-sm-8">
                        @Html.DisplayFor(model => model.Vendeur.Ville.Nom)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProduitID" />
                    <input type="submit" value="Supprimer" class="btn btn-danger float-left" />
                    <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
                </form>
            </div>
        </div>
    </div>

