@model ProjetDotN.Models.Commande

@{
    ViewData["Title"] = "Edit";
}
<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fa fa-edit"></i> Editer le produit
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CommandeID" />
                <div class="form-row">
                    <label asp-for="Produit.Designation" class="control-label col-md-4 col-xs-12"></label>
                    <select asp-for="Produit.ProduitID" name="ProduitID" class="form-control col-md-8 col-xs-12">
                        @{
                            foreach (var p in ViewBag.produits)
                            {
                                <option value="@p.ProduitID">@p.Designation</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Produit.Designation" class="text-danger errMargin"></span>
                </div>
                <br />
                <div class="form-row">
                    <label asp-for="Quantite" class="control-label col-md-4 col-xs-12"></label>
                    <input asp-for="Quantite" class="form-control col-md-8 col-xs-12" />
                    <span asp-validation-for="Quantite" class="text-danger errMargin"></span>
                </div>
                <br />
                <div class="form-row">
                    <label asp-for="Client.Nom" class="control-label col-md-4 col-xs-12"></label>
                    <select asp-for="Client.ClientID" name="ClientID" class="form-control col-md-8 col-xs-12">
                        @{
                            foreach (var c in ViewBag.clients)
                            {
                                <option value="@c.ClientID">@c.Nom</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Client.Nom" class="text-danger errMargin"></span>
                </div>
                <br />
            </div>
            <div class="card-footer">
                <div class="footerEdit">
                    <input type="submit" value="Sauvegarder" class="btn btn-success float-left" />
                    <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
                </div><br />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



