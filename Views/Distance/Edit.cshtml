@model ProjetDotN.Models.Distance

@{
    ViewData["Title"] = "Edit";
}
<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fa fa-edit"></i> Editer la distance
        </div>
        <form asp-action="Edit" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VilleDepartID" />
                <input type="hidden" asp-for="VilleArriveID" />
                <div class="form-row">
                    <label class="control-label col-md-4 col-xs-12">Distance : </label>
                    <input type="text" name="distance" class="form-control col-md-8 col-xs-12" value="@Model.distance" />
                    <span asp-validation-for="distance" class="text-danger errMargin"></span>
                </div>
                <br />
            </div>
            <div class="card-footer">
                <div class="footerEdit">
                    <input type="submit" value="Sauvegarder" class="btn btn-success float-left" />
                    <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
                </div><br />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



