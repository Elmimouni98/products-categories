@model ProjetDotN.Models.Distance

@{
    ViewData["Title"] = "Details";
}

<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fas fa-info"></i> Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.VilleDepart):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.VilleDepart.Nom)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.VilleArrive):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.VilleArrive.Nom)
                </dd>
                <dt class="col-md-4 col-sm-4">
                    @Html.DisplayNameFor(model => model.distance):
                </dt>
                <dd class="col-md-8 col-sm-8">
                    @Html.DisplayFor(model => model.distance)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id1="@Model.VilleDepartID" asp-route-id2="@Model.VilleArriveID" class="btn btn-warning float-left">Editer</a>
            <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
        </div>
    </div>
</div>