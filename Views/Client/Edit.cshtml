@model ProjetDotN.Models.Client

@{
    ViewData["Title"] = "Edit";
}
<div class="container col-md-6 col-md-offset-3 col-xs-12 ">
    <div class="card">
        <div class="card-header title">
            <i class="fa fa-edit"></i> Editer le client
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClientID" />
                <div class="form-row">
                    <label asp-for="Nom" class="control-label col-md-4 col-xs-12"></label>
                    <input asp-for="Nom" class="form-control col-md-8 col-xs-12" />
                    <span asp-validation-for="Nom" class="text-danger errMargin"></span>
                </div>
                <br />
                <div class="form-row">
                    <label asp-for="Ville.Nom" class="control-label col-md-4 col-xs-12"></label>
                    <select asp-for="Ville.VilleID" name="VilleID" class="form-control col-md-8 col-xs-12">
                        <option value="" selected>choisir une ville</option>
                        @{
                            foreach (var v in ViewBag.villes)
                            {
                                <option value="@v.VilleID">@v.Nom</option>
                            }
                        }
                    </select>                    
                    <span asp-validation-for="Ville.Nom" class="text-danger errMargin"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="footerEdit">
                    <input type="submit" value="Sauvegarder" class="btn btn-success float-left" />
                    <a asp-action="Index" class="float-right btn btn-primary">Retourner à  la liste</a>
                </div><br />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



